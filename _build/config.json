{
  "name": "SmartRouting",
  "lowCaseName": "smartrouting",
  "description": "Switch the context based on a (sub)domain and/or subfolder",
  "author": "Thomas Jakobi",
  "version": "1.0.0",
  "package": {
    "elements": {
      "plugins": [
        {
          "name": "SmartRouting",
          "description": "Switch the context based on a (sub)domain and/or subfolder",
          "file": "smartrouting.plugin.php",
          "events": [
            "OnHandleRequest",
            "OnContextSave",
            "OnContextRemove",
            "OnSiteRefresh"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "include_www",
        "type": "combo-boolean",
        "area": "system",
        "value": "1"
      },
      {
        "key": "default_context",
        "area": "system",
        "value": "web"
      },
      {
        "key": "show_no_match_error",
        "type": "combo-boolean",
        "area": "system",
        "value": "1"
      },
      {
        "key": "allow_debug_info",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      }
    ]
  },
  "dependencies": [
    {
      "name": "php",
      "version": ">=7.2"
    },
    {
      "name": "modx",
      "version": ">=2.8"
    }
  ],
  "build": {
    "readme": "docs/readme.md",
    "license": "docs/license.md",
    "changelog": "docs/changelog.md",
    "setupOptions": {
      "source": "setup.options.php"
    },
    "resolver": {
      "after": [
        "resolve.migrate.php",
        "resolve.treehillstudio.php"
      ]
    }
  }
}
